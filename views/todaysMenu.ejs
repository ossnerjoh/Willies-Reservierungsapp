                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"> <%= menu.veggie.name %> </h5>
                            <div class="details">
                                <p class="card-text mb-0"> <%= menu.veggie.description %></p>
                                <p class="card-text"><%= menu.veggie.side %></p>
                                <a href="#" class="btn btn-dark btn-sm">Reservieren</a>
